{
    "name": "vtf-audio-extension",
    "version": "0.5.0",
    "description": "VTF Audio Transcription Chrome Extension",
    "private": true,
    "scripts": {
        "postinstall": "node scripts/postinstall.js",
        "setup": "node scripts/setup.js",
        "dev": "node scripts/dev.js",
        "build": "node scripts/build.js",
        "package": "node scripts/build.js --package",
        "clean": "node scripts/clean.js",
        "test": "node scripts/test.js",
        "start": "npm run dev",
        "dist": "npm run package",
        "predev": "node scripts/check-env.js",
        "prebuild": "node scripts/check-env.js",
        "deploy:test": "npm run build && node scripts/deploy-test.js",
        "deploy:prod": "npm run package && node scripts/deploy-prod.js",
        "all": "npm run clean && npm run build && npm run test"
    },
    "devDependencies": {
        "esbuild": "^0.19.0",
        "chalk": "^5.3.0",
        "chokidar": "^3.5.3"
    },
    "author": "Your Name",
    "license": "MIT",
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    }
}
