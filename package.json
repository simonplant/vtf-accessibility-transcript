{
    "name": "vtf-audio-extension",
    "version": "0.5.0",
    "description": "VTF Audio Transcription Chrome Extension",
    "private": true,
    "scripts": {
        "postinstall": "node scripts/postinstall.js",
        "setup": "node scripts/setup.js",
        "dev": "node scripts/dev.js",
        "build": "node scripts/build.js",
        "build:prod": "NODE_ENV=production node scripts/build.js",
        "package": "NODE_ENV=production node scripts/build.js --package",
        "clean": "node scripts/clean.js",
        "test": "node scripts/test.js",
        "lint": "eslint . || echo 'No linter configured'",
        "check": "node scripts/check-env.js",
        "all": "npm run check && npm run clean && npm install && npm run postinstall && npm run build && npm run test"
    },
    "devDependencies": {
        "esbuild": "^0.19.0",
        "chalk": "^5.3.0",
        "chokidar": "^3.5.3"
    },
    "author": "Your Name",
    "license": "MIT",
    "engines": {
        "node": ">=18.0.0",
        "npm": ">=8.0.0"
    }
}
