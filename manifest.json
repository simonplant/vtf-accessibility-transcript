{
  "manifest_version": 3,
  "name": "VTF Audio Transcription",
  "version": "1.1.0",
  "description": "Captures and transcribes audio from the VTF trading floor using OpenAI Whisper.",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://vtf.t3live.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "tabs",
    "downloads",
    "scripting",
    "offscreen"
  ],
  "host_permissions": [
    "https://vtf.t3live.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "inject.js",
        "style.css",
        "offscreen.html",
        "offscreen.js",
        "audio-processor.js"
      ],
      "matches": ["https://vtf.t3live.com/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}